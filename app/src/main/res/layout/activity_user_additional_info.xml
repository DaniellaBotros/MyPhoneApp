<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserAdditionalInfo"
    android:stretchColumns="1">
    <TableRow android:padding="5dip">

        <TextView

            android:id="@+id/txt0"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_span="2"
            android:text="بيانات متفرقة"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow

        android:id="@+id/row1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <Spinner
            android:id="@+id/spin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:drawSelectorOnTop="true"
        />

        />
        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="التقسيم الجغرافي"
            android:gravity="center"

            />
    </TableRow>

    <TableRow

        android:id="@+id/row2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Spinner
        android:id="@+id/spin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:drawSelectorOnTop="true"
        />
        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المندوب"
            android:gravity="center"
            />

    </TableRow>

    <TableRow

        android:id="@+id/row3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/etxt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:hint="DD/MM/YYYY"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تاريخ التقدم"
            android:gravity="center"
            />
    </TableRow>

    <TableRow

        android:id="@+id/row4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etxt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="ادخل عدد العال الدائمين"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="عدد العمال الدائمين"
            android:gravity="center"
            />
    </TableRow>

    <TableRow

        android:id="@+id/row5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etxt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="ادخل عدد العمال المؤقتين"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/txt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="عدد العمال المؤقتين"
            android:gravity="center"
            />
    </TableRow>

    <TableRow

        android:id="@+id/row6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etxt6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="ادخل رقم الحساب"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/txt6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="رقم الحساب"
            android:gravity="center"
            />
    </TableRow>

    <TableRow

        android:id="@+id/row7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etxt7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="أدخل اسم الفرع"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/txt7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الفرع التابع له رقم الحساب"
            android:gravity="center"
            />
    </TableRow>

    <TableRow

        android:id="@+id/row8"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spin3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:gravity="center"

            />

        <TextView
            android:id="@+id/txt8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="الحالة الأجتماعية" />
    </TableRow>

    <TableRow

        android:id="@+id/row9"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spin4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:drawSelectorOnTop="true"
            />

        <TextView
            android:id="@+id/txt9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المؤهل الدراسي"
            android:gravity="center"
            />
    </TableRow>

    <TableRow

        android:id="@+id/row10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/etxt10"
            android:layout_width="10dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusableInTouchMode="true"
            android:editable="true"
            android:inputType="textImeMultiLine"
            android:background="@drawable/text_view_boarder"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/txt10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ملاحظات"
            android:gravity="center"
            />
    </TableRow>
    <TableRow

        android:id="@+id/rw11"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_home"
            android:background="@drawable/btn_design"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_gravity="right"
            android:text="عودة للصفحة الرئيسية" />

    </TableRow>
    <TableRow

    android:id="@+id/rw12"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submit"
        android:background="@drawable/btn_design"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="right"
        android:text="Submit"
        android:onClick="submiting"/>

</TableRow>

</TableLayout>